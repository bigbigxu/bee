#!/usr/local/php/bin/php
<?php
/**
 * swoole 基类服务启动程序
 */
require __DIR__ . '/../server/BaseServer.php';
require __DIR__ . '/../server/DbServer.php';
$server = new \bee\server\DbServer();
list($cmd, $config) = $server->getOptsByCli(__DIR__ . '/../config/db_server.php');
$server->setConfig($config);
$server->c('server.load_bee', true);

//此服务运行需要框架层配置文件
$server->c('server.bee_config', array(
    'db' => array(
        'test' => array(
            'dsn' => 'mysql:host=127.0.0.1;port=3306;dbname=test',
            'username' => 'root',
            'password' => '111111',
        ),
    ),
    'redis' => array(
        'main' => array(
            'host' => '127.0.0.1',
            'port' => 6379,
        ),
    ),
));
$server->run($cmd);